#!/bin/sh

if [ "$PWD"="$DROPBOX" ]; then
  [ "$PAPER"=="" ] || exit 1
  d=$DROPBOX/research/mypaper/$PAPER
  if [ ! -d $d ]; then
    mkdir -p $d/img $d/sty $d/tex
    cd $d
    unset d
    MAIN=tex/main.tex
    touch $MAIN
    git init --separate-git-dir ../.git/$PAPER
  fi
  cd $d
  [ "$MAIN"=="" ] && export MAIN="tex/main.tex"
fi

mvim tex

[ "$BUILD"!="" ] &&
  latexmk -quiet -gg -r "$DROPBOX/lib/tex/mk/$BUILD"
